#!/bin/sh

set -e

. libstd-ecm.sh

usage() {
    echo "usage: $0 [idh]
    -i    image name
    -d    dry run
    -h    show help

examples:
    $0 -i ecmdt-local:latest"
}

while getopts 'i:dh' c; do
    case $c in
    i) 
        IMAGE_NAME=$OPTARG
    ;;
    d)
        DRY_RUN=true
    ;;
    h)
        usage
        exit 0
    ;;
    *)
        usage
        exit 1
    ;;
    esac
done

if [ -z "${IMAGE_NAME}" ]; then
    echo "error: image name required"
    exit 1
fi

has_trivy

if [ "${DRY_RUN}" ]; then
    echo "trivy image -s HIGH,CRITICAL -t 3m0s ${IMAGE_NAME}"
else
    trivy image -s HIGH,CRITICAL -t 3m0s "${IMAGE_NAME}"
fi

exit 0
